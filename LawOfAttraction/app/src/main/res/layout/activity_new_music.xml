<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232635"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".NewMusic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#EFFBFB"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/taskCover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/abeezee"
                android:textAlignment="center"
                android:textColor="#797575"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tbody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/abeezee"
                android:textColor="#909090"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2" />


            <TextView
                android:id="@+id/textTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="00:00" />

            <SeekBar
                android:id="@+id/seekbar"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_play_pause"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/textTimer"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/buttrack"
                android:src="@drawable/ic_play" />


        </LinearLayout>

    </ScrollView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#0073A1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/taskShareId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="musicShare"
            android:scaleX="1"
            android:src="@drawable/crop" />


    </LinearLayout>
</LinearLayout>
