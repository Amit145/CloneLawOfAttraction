<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textAlignment="center"
            android:background="#232635"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background=" #ffffff "
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subUniverse_dialogName"
                android:textStyle="normal"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/feedbackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:inputType="text|textCapWords" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#d3d3d3"/>

            <TextView
                android:id="@+id/feed"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback1"
                android:textStyle="normal"
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioDaily"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daily"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioWeekly"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekly"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback11"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioMonthly"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monthly"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback111"
                android:checked="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#d3d3d3"/>

            <TextView
                android:id="@+id/feed1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback2"
                android:textStyle="normal"
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"/>

            <RadioButton
                android:id="@+id/radioWorse"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/needImprovement"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback2"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioAverage"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/good"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback22"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioBest"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback222"
                android:checked="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#d3d3d3"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/feed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback3"
                android:textStyle="normal"
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioYes"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Yes_text"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback3"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioNo"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/No_text"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback33"
                android:checked="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#d3d3d3"/>

            <TextView
                android:id="@+id/feed3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback4"
                android:textStyle="normal"
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioYes1"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Yes_text"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback4"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioNo1"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/No_text"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="35sp"
                android:onClick="radioFeedback44"
                android:checked="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#d3d3d3"/>

            <TextView
                android:id="@+id/feed4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/feedback5"
                android:textSize="35sp"
                android:textStyle="normal"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/feedback4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="35sp"
                android:inputType="textMultiLine|textCapSentences"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btncancel1"
                    android:layout_weight=".5"
                    android:text="@string/subUniverse_dialogCancel"
                    android:textStyle="bold"
                    android:background="#ff3333"
                    android:textColor="#ffffff"
                    android:onClick="cancel"
                    android:textSize="35sp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnsubmit1"
                    android:layout_weight=".5"
                    android:text="@string/subUniverse_dialogSubmit"
                    android:background=" #ff5733"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="35sp"
                    android:onClick="submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

