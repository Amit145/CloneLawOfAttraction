<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77D50A" />
            <gradient android:angle="-90" android:startColor="#77D50A" android:endColor="#5CA505"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#92F41F" />
            <solid android:color="#92F41F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77D50A" />
            <gradient android:angle="-90" android:startColor="#77D50A" android:endColor="#5CA505" />
        </shape>
    </item>
</selector>